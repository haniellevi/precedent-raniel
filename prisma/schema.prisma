// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  free
  basic
  pro
  admin
}

model User {
  clerkUserId String @id @unique
  email String @unique
  name  String?
  role  UserRole @default(free)
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dnaProfile DnaProfile?
  sermons    Sermon[]
}

model DnaProfile {
  id        String   @id @default(cuid())
  userId    String   @unique // Um usuário tem apenas um perfil de DNA
  user      User     @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)

  name      String   @default("Meu Perfil de Pregação")
  style     String?  // Ex: Expositivo, Temático
  tone      String?  // Ex: Inspirador, Confrontador

  // Este campo pode ser usado para armazenar dados extra no futuro
  customAttributes Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sermon {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  title String
  content String @db.Text
  parameters Json // Armazena os parâmetros usados para a geração
  enrichmentSuggestions String? @db.Text
  qualityAssessment     Json?
  planType UserRole
  createdAt DateTime @default(now())
  @@index([userId])
}